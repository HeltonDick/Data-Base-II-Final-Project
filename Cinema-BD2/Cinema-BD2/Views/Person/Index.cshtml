@model IEnumerable<Cinema_BD2.Models.Person>

@{
    ViewData["Title"] = "Pessoas";
}

<div class="text-center">
    <h1 class="display-4">
        @(Model?.Count() ?? 0) Pessoa(s).
    </h1>

    @if (!Model.Any())
    {
        <h1>Nenhuma Pessoa cadastrada.</h1>
    }

    <!--
    <form asp-controller="Person" asp-action="Index" method="get" class="d-flex mb-4">
        <input type="text" name="search" class="form-control me-2"
               placeholder="Pesquisar Pessoa pelo nome..." />

        <button type="submit" class="btn btn-primary me-2">
            <i class="bi bi-search"></i>
        </button>

        <a asp-controller="Person" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i>
        </a>
    </form>
    -->

    <a asp-controller="Person" class="btn btn-primary" asp-action="Create">Novo</a>

    <hr />

    <table class="table table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>CPF</th>
                <th>Gender</th>
                <th>Roles</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Cpf</td>
                    <td>@p.Gender?.Name</td>
                    <td>@string.Join(", ", p.Roles.Select(r => r.Name))</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@p.Id">Edit</a> |
                        <form asp-action="Delete" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@p.Id" />
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>