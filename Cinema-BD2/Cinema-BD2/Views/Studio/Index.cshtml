@model IEnumerable<Cinema_BD2.Models.Studio>

@{
    ViewData["Title"] = "Estudios";
}

<div class="text-center">
    <h1 class="display-4">
        @(Model?.Count() ?? 0) Estudio(s).
    </h1>

    @if (!Model.Any())
    {
        <h1>Nenhum Estudio cadastrado.</h1>
    }

    <!--
    <form asp-controller="Studio" asp-action="Index" method="get" class="d-flex mb-4">
        <input type="text" name="search" class="form-control me-2"
               placeholder="Pesquisar Studio pelo nome..." />

        <button type="submit" class="btn btn-primary me-2">
            <i class="bi bi-search"></i>
        </button>

        <a asp-controller="Studio" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i>
        </a>
    </form>
    -->

    <a asp-controller="Studio" class="btn btn-primary" asp-action="Create">Novo</a>

    <hr />

    <table class="table table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Estudio</th>
                <th>Editar</th>
                <th>Excluir</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.Name</td>
                    <td>
                        <a asp-controller="Studio" asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@s.Id">
                            Editar
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Studio" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@s.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este Estudio?');">
                                Excluir
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


