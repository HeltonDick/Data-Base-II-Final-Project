@model IEnumerable<Cinema_BD2.Models.TypeOfRoom>

@{
    ViewData["Title"] = "Tipos de salas";
}

<div class="text-center">
    <h1 class="display-4">
        @(Model?.Count() ?? 0) Tipo(s) de sala.
    </h1>

    @if (!Model.Any())
    {
        <h1>Nenhum Tipo de sala cadastrado.</h1>
    }

    <a asp-controller="TypeOfRoom" asp-action="Create">Novo</a>
    <table class="table table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo de sala</th>
                <th>Editar</th>
                <th>Excluir</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Name</td>
                    <td>
                        <a asp-controller="TypeOfRoom" asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@t.Id">
                            Editar
                        </a>
                    </td>
                    <td>
                        <form asp-controller="TypeOfRoom" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@t.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este Tipo de sala?');">
                                Excluir
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


