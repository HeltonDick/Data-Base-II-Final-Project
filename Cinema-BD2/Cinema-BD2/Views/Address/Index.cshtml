@model IEnumerable<Cinema_BD2.Models.Address>

@{
    ViewData["Title"] = "Endereços";
}

<div class="text-center">
    <h1 class="display-4">
        @(Model?.Count() ?? 0) Endereço(s).
    </h1>

    @if (!Model.Any())
    {
        <h1>Nenhum Endereço cadastrado.</h1>
    }

    <a asp-controller="Address" asp-action="Create">Novo</a>
    <table class="table table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Número</th>
                <th>Logradouro</th>
                <th>Referencia</th>
                <th>Cep</th>
                <th>Rua</th>
                <th>Bairro</th>
                <th>Editar</th>
                <th>Excluir</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.Number</td>
                    <td>@a.Logradouro</td>
                    <td>@a.Reference</td>
                    <td>@a.Cep</td>
                    <td>@a.Street?.Name</td>
                    <td>@a.District?.Name</td>
                    <td>
                        <a asp-controller="Address" asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@a.Id">
                            Editar
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Address" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@a.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este Endereço?');">
                                Excluir
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
