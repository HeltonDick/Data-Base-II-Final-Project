@model IEnumerable<Cinema_BD2.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";
}

<div class="text-center">
    <h1 class="display-4">
        @(Model?.Count() ?? 0) Ingresso(s).
    </h1>

    @if (!Model.Any())
    {
        <h1>Nenhum Ingresso cadastrado.</h1>
    }

    <a asp-controller="Ticket" asp-action="Create">Novo</a>
    <table class="table table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Data Compra</th>
                <th>Valor</th>
                <th>Pessoa</th>
                <th>Sessao</th>
                <th>Editar</th>
                <th>Excluir</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.DatePurchase.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@t.Price.ToString("C")</td>
                    <td>@t.Person?.Name</td>
                    <td>@t.Session?.SessionDate</td>
                    <td>
                        <a asp-controller="Ticket" asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@t.Id">
                            Editar
                        </a>
                    </td>
                    <td>
                        <form asp-controller="Ticket" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@t.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este ticket?');">
                                Excluir
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


